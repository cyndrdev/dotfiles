" colors
syntax enable

" spaces & tabs
set tabstop=4
set softtabstop=4
set shiftwidth=4
set expandtab
set autoindent
set copyindent

" ui
set number
set relativenumber
set showcmd
set cursorline
set wildmenu
set showmatch
set nobackup
set noswapfile

" search
set incsearch
set hlsearch
set ignorecase
set smartcase
